<!--suppress XmlUnboundNsPrefix -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Adds 2 content placeholders; 1 before and 1 after the search result -->
        <referenceContainer name="content">
            <block class="Nosto\Tagging\Block\PageType" name="nosto.page.type.search" after="-">
                <arguments>
                    <argument name="page_type" xsi:type="string">search</argument>
                </arguments>
            </block>
            <block class="Nosto\Tagging\Block\Search" name="nosto.search" after="-"/>
            <block class="Nosto\Tagging\Block\Element" name="nosto.page.search1"
                   before="search.result" template="Nosto_Tagging::element.phtml">
                <arguments>
                    <argument name="nostoId" xsi:type="string">nosto-page-search1</argument>
                </arguments>
            </block>
            <block class="Nosto\Tagging\Block\Element" name="nosto.page.search2"
                   after="search.result" template="Nosto_Tagging::element.phtml">
                <arguments>
                    <argument name="nostoId" xsi:type="string">nosto-page-search2</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>