<!--suppress XmlUnboundNsPrefix -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Nosto\Tagging\Block\Meta" name="nosto.meta" after="-"
                   template="Nosto_Tagging::meta.phtml"/>
            <block class="Nosto\Tagging\Block\Stub" name="nosto.jstub" after="nosto.meta"
                   template="Nosto_Tagging::jsstub.phtml"/>
            <block class="Nosto\Tagging\Block\Embed" name="nosto.embed" after="nosto.jstub"
                   template="Nosto_Tagging::embed.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Nosto\Tagging\Block\Variation" name="nosto.currency.variation" before="-"/>
            <block class="Nosto\Tagging\Block\Addtocart" name="nosto.page.type.addtocart" after="-"
                   template="Nosto_Tagging::addtocart.phtml">
            </block>
            <block class="Nosto\Tagging\Block\Knockout" name="nosto.cart" before="-"
                   template="Nosto_Tagging::cart.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="cartTagging" xsi:type="array">
                                <item name="component" xsi:type="string">Nosto_Tagging/js/view/cart-tagging</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
            <block class="Nosto\Tagging\Block\Knockout" name="nosto.customer" after="nosto.cart"
                   template="Nosto_Tagging::customer.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="customerTagging" xsi:type="array">
                                <item name="component" xsi:type="string">Nosto_Tagging/js/view/customer-tagging</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
            <block class="Nosto\Tagging\Block\Knockout" name="nosto.price.variation" after="nosto.cart"
                   template="Nosto_Tagging::variation.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="variationTagging" xsi:type="array">
                                <item name="component" xsi:type="string">Nosto_Tagging/js/view/variation-tagging</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>