<!--suppress XmlUnboundNsPrefix -->
<!--suppress XmlPathReference -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Nosto\Tagging\Block\PageType" name="nosto.page.type.category" after="-"
                   template="Nosto_Tagging::pagetype.phtml">
                <action method="setData">
                    <argument name="name" xsi:type="string">page_type</argument>
                    <argument name="value" xsi:type="string">category</argument>
                </action>
            </block>
            <block class="Nosto\Tagging\Block\Category" name="nosto.category"
                   template="Nosto_Tagging::category.phtml"/>
            <block class="Nosto\Tagging\Block\Element" name="nosto.page.category1"
                   before="category.products" template="Nosto_Tagging::element.phtml">
                <action method="setData">
                    <argument name="name" xsi:type="string">nostoId</argument>
                    <argument name="value" xsi:type="string">nosto-page-category1</argument>
                </action>
            </block>
            <block class="Nosto\Tagging\Block\Element" name="nosto.page.category2"
                   after="category.products" template="Nosto_Tagging::element.phtml">
                <action method="setData">
                    <argument name="name" xsi:type="string">nostoId</argument>
                    <argument name="value" xsi:type="string">nosto-page-category2</argument>
                </action>
            </block>
            <container htmlClass="nosto_page_type hidden" htmlTag="div" name="category.nosto.page.tag.container">
                <block class="Magento\Framework\View\Element\Text" name="category.nosto.page.tag">
                    <arguments>
                        <argument name="text" xsi:type="string">category</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
