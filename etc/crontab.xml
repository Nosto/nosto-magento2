<?xml version="1.0"?>
<!--suppress XmlUnboundNsPrefix -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="nosto_exchange_rates" instance="Nosto\Tagging\Cron\Rates" method="execute">
            <schedule>4 * * * *</schedule>
        </job>
    </group>
    <group id="nosto_indexer_group">
        <job name="nosto_invalidate_data" instance="Nosto\Tagging\Cron\Invalidate" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
        <job name="nosto_upsert_product_data" instance="Nosto\Tagging\Cron\Upsert" method="execute">
            <schedule>* * * * *</schedule>
        </job>
    </group>
</config>
