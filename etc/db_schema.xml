<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!--createCustomerTable-->
    <table name="nosto_tagging_customer" engine="innodb" comment="Nosto Tagging Customer">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" comment="Customer ID"/>
        <column xsi:type="int" name="quote_id" unsigned="true" nullable="false"/>
        <column xsi:type="varchar" length="255" name="nosto_id" nullable="false" comment="Nosto Customer ID"/>
        <column xsi:type="datetime" name="created_at" nullable="false" comment="Creation Time"/>
        <column xsi:type="datetime" name="updated_at" nullable="false" comment="Updated Time"/>
        <column xsi:type="text" name="restore_cart_hash" nullable="true" comment="Restore Cart Hash"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <!--Nosto customer and order mapping-->
        <index referenceId="NOSTO_CUSTOMER_ORDER_MAPPING" indexType="btree">
            <column name="quote_id"/>
        </index>
    </table>

    <!-- Table to store exclude id while doing product indexer-->
    <table name="nosto_product_indexer_exclude" engine="innodb" comment="Nosto Product Indexer exclude">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Primary id"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" comment="Entity/Product id"/>
        <column xsi:type="varchar" length="20" name="action" nullable="false" comment="Action to apply this exclude"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
