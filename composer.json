{
  "name": "nosto/module-nostotagging",
  "description": "Increase your conversion rate and average order value by delivering your customers personalized product recommendations throughout their shopping journey.",
  "type": "magento2-module",
  "version": "4.0.0-rc5",
  "require-dev": {
    "php": ">=7.1.0",
    "phan/phan": "0.8.8",
    "phpmd/phpmd": "^2.5",
    "sebastian/phpcpd": "*",
    "phpdocumentor/reflection-docblock": "3.0.0",
    "phing/phing": "2.*",
    "magento-ecg/coding-standard": "2.*",
    "magento/marketplace-eqp": "1.*",
    "magento/marketplace-tools": "dev-master",
    "magento/module-catalog": "*",
    "magento/module-sales": "101.0.0",
    "magento/module-sales-inventory": "100.2.0",
    "magento/module-sales-rule": "101.0.0",
    "magento/module-store": "100.2.0",
    "magento/module-configurable-product": "100.2.0",
    "magento/module-directory": "100.2.0",
    "magento/module-bundle": "100.2.0",
    "magento/module-search": "100.2.0",
    "magento/module-catalog-search": "100.2.0",
    "magento/module-quote": "101.0.0",
    "magento/module-review": "100.2.0",
    "magento/zendframework1": "*"
  },
  "suggest": {
    "magento/product-community-edition": "2.*",
    "yotpo/module-review": "^2.9",
    "ext-newrelic": "*",
    "ext-code": "*"
  },
  "license": [
    "OSL-3.0"
  ],
  "minimum-stability": "dev",
  "require": {
    "nosto/php-sdk": "^4.0.5",
    "php": ">=7.0.0",
    "ext-json": "*",
    "magento/framework": ">=101.0.6|~102.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    },
    {
      "type": "package",
      "package": {
        "name": "magento/marketplace-tools",
        "version": "dev-master",
        "source": {
          "url": "https://github.com/magento/marketplace-tools",
          "type": "git",
          "reference": "origin/master"
        }
      }
    }
  ],
  "autoload": {
    "psr-4": {
      "Nosto\\Tagging\\": ""
    },
    "files": [
      "registration.php"
    ]
  },
  "archive": {
    "exclude": ["Jenkinsfile", "Dockerfile", ".DS_STORE", ".idea", ".phan", ".docker", "ruleset.xml", "phan.*", ".gitignore", "build.xml", ".github", "supervisord.conf", "entrypoint.sh"]
  },
  "scripts": {
    "validate-archive": [
      "php ./vendor/magento/marketplace-tools/validate_m2_package.php $@"
    ],
    "unit-tests": [
      "/bin/cp dev/tests/integration/phpunit.xml ../../../dev/tests/integration/",
      "/bin/cp dev/tests/integration/etc/install-config-mysql.php ../../../dev/tests/integration/etc/",
      "docker-compose -f dev/tests/docker-compose.yml up -d",
      "php ../../../vendor/phpunit/phpunit/phpunit --configuration ../../../dev/tests/Integration/phpunit.xml ../../../vendor/nosto/module-nostotagging/Test/Integration --testdox",
      "docker-compose -f dev/tests/docker-compose.yml stop"
    ]
  },
  "config": {
    "process-timeout":0
  }
}
